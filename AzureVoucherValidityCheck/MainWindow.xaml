<Window x:Class="AzureVoucherValidityCheck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AzureVoucherValidityCheck"
        mc:Ignorable="d"
        Title="Azure Voucher Validity Check" Height="350" Width="525">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Voucher"/>
            <TextBox x:Name="voucherTextBox" Width="200"/>
        </StackPanel>
        <Button x:Name="checkButton" Content="Check" Click="CheckButton_Click"/>
        <TextBlock x:Name="statusTextBlock" TextWrapping="Wrap" />
    </StackPanel>
</Window>
